{
  "name": "@coinlucks/contracts",
  "version": "1.0.0",
  "description": "CoinLucks smartcontracts",
  "main": "index.js",
  "author": "CoinLucks",
  "license": "MIT",
  "homepage": "https://github.com/coinlucks/coinlucks-contracts",
  "keywords": [
    "blockchain",
    "erc20",
    "erc721",
    "dao",
    "nft",
    "ethereum",
    "bsc",
    "opBNB",
    "raffle",
    "scratchers",
    "flips",
    "vrf",
    "chainlink",
    "library",
    "smart-contracts",
    "solidity"
  ],
  "scripts": {
    "chain": "npx hardhat node --hostname 0.0.0.0",
    "clean": "rimraf ./cache && rimraf ./artifacts",
    "compile": "yarn hardhat compile",
    "deploy": "npx hardhat deploy",
    "test": "npx hardhat test",
    "test:coinflip": "npx hardhat test test/unit/flips/CoinFlip/test.properbility.case.ts",
    "test:diceshake": "npx hardhat test test/unit/dices/DiceShake/test.properbility.case.ts",
    "test:scratch69": "npx hardhat test test/unit/scratchers/Scratch69/test.properbility.case.ts",
    "prettier:test": "prettier --write test/**/*.ts",
    "prettier:sol": "prettier --write --plugin=prettier-plugin-solidity contracts/**/*.sol",
    "comment-mainnet": "//=============== Mainnet ===============================",
    "comment-testnet": "//=============== Testnet ===============================",
    "deploy:test-dices": "npx hardhat ignition deploy ignition/modules/dices/DiceShakeAll.ts --network opBNBTestnet",
    "deploy:test-flips": "npx hardhat ignition deploy ignition/modules/flips/CoinFlipAll.ts --network opBNBTestnet",
    "deploy:test-scratchers": "npx hardhat ignition deploy ignition/modules/scratchers/scratch69/Scratch69All.ts --network opBNBTestnet",
    "deploy:test-raffles": "npx hardhat ignition deploy ignition/modules/raffles/RaffleAll.ts --network opBNBTestnet",
    "verify:test": "npx hardhat verifyContract --network opBNBTestnet",
    "checkGas": "npx hardhat checkGas --network bsc",
    "comment-local": "  //=============== Local   ===============================",
    "deploy:local-dices": "npx hardhat ignition deploy ignition/modules/dices/DiceShakeAll.ts --network localhost",
    "deploy:local-flips": "npx hardhat ignition deploy ignition/modules/flips/CoinFlipAll.ts --network localhost",
    "deploy:local-scratchers": "npx hardhat ignition deploy ignition/modules/scratchers/scratch69/Scratch69All.ts --network localhost",
    "deploy:local-raffles": "npx hardhat ignition deploy ignition/modules/raffles/RaffleAll.ts --network localhost",
    "deploy:local-mocks": "npx hardhat ignition deploy ignition/modules/mocks/Mocks.ts --network localhost",
    "verify:local": "npx hardhat verifyContract --network localhost",
    "show:local-raffle": "npx hardhat ignition visualize ignition/modules/raffles/RaffleAll.ts",
    "binanceVRF:subscription": "npx hardhat createSubscription --network opBNBTestnet",
    "binanceVRF:fund": "npx hardhat fundSubscription --network opBNBTestnet --amount 0.1",
    "binanceVRF:addConsumer": "npx hardhat addConsumer --network opBNBTestnet",
    "binanceVRF:getConsumers": "npx hardhat getConsumers --network opBNBTestnet"
  },
  "dependencies": {
    "@chainlink/contracts": "^1.1.0",
    "@openzeppelin/contracts": "^5.0.2",
    "@openzeppelin/contracts-upgradeable": "^5.0.2",
    "hardhat-tracer": "^2.8.2",
    "prettier": "^3.2.5"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-chai-matchers": "^2.0.7",
    "@nomicfoundation/hardhat-ethers": "^3.0.8y",
    "@nomicfoundation/hardhat-ignition": "^0.15.5",
    "@nomicfoundation/hardhat-ignition-ethers": "^0.15.7",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.12",
    "@nomicfoundation/hardhat-verify": "^2.0.8",
    "@nomicfoundation/ignition-core": "^0.15.5",
    "@types/chai": "^4.2.0",
    "@types/chai-as-promised": "^7.1.6",
    "@types/mocha": ">=9.1.0",
    "@types/node": ">=18.0.0",
    "chai": "^4.2.0",
    "dotenv": "^16.4.5",
    "ethers": "^6.13.4",
    "hardhat": "^2.22.15",
    "hardhat-contract-sizer": "^2.10.0",
    "hardhat-gas-reporter": "^2.1.1",
    "prettier-plugin-solidity": "^1.3.1",
    "solidity-coverage": "^0.8.0",
    "ts-node": ">=8.0.0",
    "tsconfig-paths": "^4.2.0",
    "typescript": "~5.0.4"
  }
}
